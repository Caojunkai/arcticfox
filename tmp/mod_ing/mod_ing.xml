<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>ING</name>
    <author>Laratrvel</author>
    <authorEmail>laratrvel@163.com</authorEmail>
    <copyright>Copyright Info</copyright>
    <license>License Info</license>
    <version>V0.0.1</version>
    <description>A simple Module Test</description>
    <files>
        <filename module="mod_ing">mod_ing.php</filename>
        <filename>index.html</filename>
        <filename>mod_ing.xml</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>sql</folder>
    </files>
    <media destination="mod_ing" folder="media">
        <filename>index.html</filename>
        <folder>images</folder>
    </media>
    <config>

    </config>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>
</extension>